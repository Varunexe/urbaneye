# ===== .env.example =====
# Database Configuration
DATABASE_URL=sqlite:///./traffic_violations.db
SQLITE_URL=sqlite:///./traffic_violations.db

# Redis Configuration (for background jobs)
REDIS_URL=redis://localhost:6379/0

# JWT Secret
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
SMS_PROVIDER=twilio  # Options: twilio, mock

# File Storage
UPLOAD_FOLDER=./data/raw
EVIDENCE_FOLDER=./data/evidence
MAX_UPLOAD_SIZE=100  # MB

# AI Model Configuration
YOLO_MODEL_PATH=./models/yolo/yolov8n.pt
HELMET_MODEL_PATH=./models/yolo/helmet_detection.pt
SEATBELT_MODEL_PATH=./models/yolo/seatbelt_detection.pt
CONFIDENCE_THRESHOLD=0.5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development
DEBUG=True
RELOAD=True